@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="card" style=" margin-top: 20px">
        <div class="card-header">
            <h1>Students Marks </h1>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">

                    <div class="row">
                        <label asp-for="marks.Name" class="col-lg-2"></label>
                        <input type="text" asp-for="marks.Name" class="col-lg-2" />
                        <label asp-for="marks.PassMark" class="col-lg-2"></label>
                        <input type="number" asp-for="marks.PassMark" class="col-lg-2" />

                    </div>

                    <div class="row">
                        <label asp-for="marks.Marks1" class="col-lg-2"></label>
                        <input type="number" step="0.1" asp-for="marks.Marks1" class="col-lg-2" />
                        <label asp-for="marks.Marks2" class="col-lg-2"></label>
                        <input type="number" step="0.1" asp-for="marks.Marks2" class="col-lg-2" />
                        <label asp-for="marks.Marks3" class="col-lg-2"></label>
                        <input type="number" step="0.1" asp-for="marks.Marks3" class="col-lg-2" />
                        <label asp-for="marks.Marks4" class="col-lg-2"></label>
                        <input type="number" step="0.1" asp-for="marks.Marks4" class="col-lg-2" />
                    </div>

                    <div class="row">
                        <input type="submit" value="Submit" asp-action="Index" />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">

            <div class="row">

                <label asp-for="marks.Result" class="col-lg-2"></label>
                <h5>@Model.StudentResult </h5>
            </div>
        </div>
    </div>
</div>
